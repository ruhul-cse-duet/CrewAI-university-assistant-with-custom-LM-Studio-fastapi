# ========================================
# LM Studio Configuration
# ========================================
# Base URL for LM Studio API
LM_STUDIO_BASE_URL=http://localhost:1234/v1

# Model for text generation (chat/completion)
LM_STUDIO_MODEL=lmstudio-community/Meta-Llama-3-8B-Instruct-GGUF

# Model for embeddings (must be loaded in LM Studio)
LM_STUDIO_EMBEDDING_MODEL=lmstudio-community/sizrox/paraphrase-multilingual-mpnet-base-v2-Q8_0-GGUF

LM_STUDIO_API_KEY=lm-studio

# ========================================
# Embedding Provider Configuration
# ========================================
# Choose: 'lmstudio' or 'sentence-transformers'
# 'lmstudio' - Uses LM Studio's embedding API (requires model loaded in LM Studio)
# 'sentence-transformers' - Uses HuggingFace transformers (automatic download)
EMBEDDING_PROVIDER=lmstudio

# Embedding dimension (768 for mpnet, 384 for MiniLM)
EMBEDDING_DIMENSION=768

# Fallback model if LM Studio fails (used only with sentence-transformers)
EMBEDDING_MODEL=sentence-transformers/paraphrase-multilingual-mpnet-base-v2

# ========================================
# API Configuration
# ========================================
API_HOST=127.0.0.1
API_PORT=8000
DEBUG=False
ENVIRONMENT=development
LOG_LEVEL=INFO

# ========================================
# Search API Configuration
# ========================================
USE_SERPER_API=true
SERPER_API_KEY=

# Alternative: Google Custom Search
GOOGLE_SEARCH_API_KEY=
GOOGLE_SEARCH_ENGINE_ID=

# ========================================
# University Configuration
# ========================================
UNIVERSITY_NAME=
UNIVERSITY_DOMAIN=

# ========================================
# FAISS & Vector Store
# ========================================
FAISS_INDEX_PATH=./data/faiss_index
METADATA_PATH=./data/metadata.json

# ========================================
# Search Configuration
# ========================================
MAX_SEARCH_RESULTS=10
TOP_K_RESULTS=3
SIMILARITY_THRESHOLD=0.5

# ========================================
# Cache Settings
# ========================================
CACHE_ENABLED=true
CACHE_EXPIRY_HOURS=24
CACHE_MAX_SIZE=1000

# ========================================
# Web Scraping
# ========================================
SCRAPE_TIMEOUT=10
MAX_CONTENT_LENGTH=5000

# ========================================
# Rate Limiting
# ========================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_PERIOD=60

# ========================================
# CORS Settings
# ========================================
CORS_ORIGINS=*
